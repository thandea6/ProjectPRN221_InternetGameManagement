@page
@model ProjectPRN221_InternetGameManagement.Pages.Product.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
    Layout = null;
}

<h2>Delete Product</h2>

<p>Are you sure you want to delete this product?</p>

<div>
    <strong>Product Name:</strong> @Model.Product.Name <br>
    <strong>Category:</strong> @Model.Product.Category <br>
    <strong>Price:</strong> @Model.Product.Price
</div>

<form method="post">
    <input type="hidden" asp-for="Product.Id" />
    <button type="submit">Confirm Delete</button>
    <button type="button" onclick="location.href='@Url.Page("/Product/List")'">Cancel</button>
</form>