@page
@model ProjectPRN221_InternetGameManagement.Pages.Product.AddProductModel
@{
    ViewData["Title"] = "Add Product";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <div class="text-end">
        <button class="btn btn-secondary" onclick="location.href='@Url.Page("/Product/List")'">Back to Product List</button>
    </div>

    <h2 class="text-center">Add New Product</h2>

    <form method="post" class="mt-4">
        <div class="mb-3">
            <label for="Name" class="form-label">Product Name:</label>
            <input type="text" id="Name" name="Name" asp-for="Product.Name" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="Category" class="form-label">Category:</label>
            <select id="Category" name="Category" asp-for="Product.Category" asp-items="Model.Categories" class="form-select" required>
                <option value="">-- Select Category --</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="Price" class="form-label">Price:</label>
            <input type="number" id="Price" name="Price" asp-for="Product.Price" class="form-control" required step="0.01" />
        </div>
        <button type="submit" class="btn btn-primary">Add Product</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <p class="text-danger mt-3">@Model.ErrorMessage</p>
    }
</div>
