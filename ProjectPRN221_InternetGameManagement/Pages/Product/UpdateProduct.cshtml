@page
@model ProjectPRN221_InternetGameManagement.Pages.Product.UpdateProductModel
@{
    ViewData["Title"] = "Update Product";
    Layout = "~/Pages/Shared/_Layout.cshtml"; // Sử dụng layout chung
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Update Product</h2>
        <button class="btn btn-secondary" onclick="location.href='@Url.Page("/Product/List")'">Back to Product List</button>
    </div>

    <form method="post" class="card p-4 shadow-sm">
        <input type="hidden" asp-for="Product.Id" />

        <div class="mb-3">
            <label for="name" class="form-label">Name:</label>
            <input id="name" asp-for="Product.Name" class="form-control" readonly />
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="category" class="form-label">Category:</label>
            <input id="category" asp-for="Product.Category" class="form-control" readonly />
            <span asp-validation-for="Product.Category" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="price" class="form-label">Price:</label>
            <input id="price" asp-for="Product.Price" class="form-control" />
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>
