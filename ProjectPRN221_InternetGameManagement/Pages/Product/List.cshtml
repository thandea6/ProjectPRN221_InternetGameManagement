@page
@model ProjectPRN221_InternetGameManagement.Pages.Product.ListModel
@{
    ViewData["Title"] = "Product List";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Product List</h2>
        <button class="btn btn-secondary" onclick="location.href='@Url.Page("/Manager/List")'">Back to Manager</button>
    </div>

    <div class="text-end mb-3">
        <button class="btn btn-primary" onclick="location.href='@Url.Page("/Product/AddProduct")'">Add Product</button>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Category</td>
                    <td>@product.Price</td>
                    <td>
                        <button class="btn btn-warning btn-sm" onclick="location.href='@Url.Page("/Product/UpdateProduct", new { id = product.Id })'">Update</button>
                        <button class="btn btn-danger btn-sm" onclick="location.href='@Url.Page("/Product/Delete", new { id = product.Id })'">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
