@page
@model ProjectPRN221_InternetGameManagement.Pages.Manager.AddUserModel
@{
    ViewData["Title"] = "Add User";
    Layout = "_Layout"; // Áp dụng layout chung của project
}

<div class="container mt-5">
    <h2 class="mb-4">Add User</h2>

    <!-- Nút Back để quay lại trang List -->
    <button onclick="location.href='@Url.Page("/Manager/List")'" class="btn btn-secondary mb-3">Back to List</button>

    <!-- Form thêm người dùng mới -->
    <form method="post">
        <div class="form-group mb-3">
            <label for="Username">Username</label>
            <input type="text" asp-for="Username" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label for="Password">Password</label>
            <input type="password" asp-for="Password" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label for="Time">Initial Time (minutes)</label>
            <input type="number" asp-for="Time" class="form-control" min="0" required />
        </div>
        <button type="submit" class="btn btn-primary">Add User</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <p class="text-danger mt-3">@Model.ErrorMessage</p>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <p class="text-success mt-3">@Model.SuccessMessage</p>
    }
</div>
